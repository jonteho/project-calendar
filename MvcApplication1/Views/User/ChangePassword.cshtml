@model MvcApplication1.Models.User

<div class="myEventDiv well pagination-centered">
    <ul class="nav nav-pills">
        <li>@Html.ActionLink("Hem", "Index", "Calendar")</li>
        <li>@Html.ActionLink("Min Kalender", "Month", "Calendar")</li>
        <li class="active">@Html.ActionLink("Byt lösenord", "ChangePassword", "User")</li>
    </ul>
    <hr />
    <h2>Byt lösenord</h2>
    <form class="" action="/user/changepassword" method="POST">
        <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
                <input type="text" id="inputEmail" name="email" placeholder="Email">
            </div>
        </div>
        <div class="control-group">
                <label class="control-label" for="inputCurrentPassword">Nuvarande lösenord</label>
                <div class="controls">
                    <input type="password" id="inputCurrentPassword" name="currentPassword" placeholder="Nuvarande lösenord">
                </div>
            </div>
        <div class="control-group">
            <label class="control-label" for="inputNewPassword">Nytt lösenord</label>
            <div class="controls">
                <input type="password" id="inputNewPassword" name="newPassword" placeholder="Nytt lösenord">
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn btn-primary">Ändra</button>
            </div>
        </div>
    </form>
</div>
